<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <RelativeLayout
            android:id="@+id/rl_top_bg"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="61dp"
            android:background="@color/colorPrimary" />


        <LinearLayout
            android:id="@+id/ll_harware_info"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/rl_top_bg"
            android:layout_marginLeft="@dimen/basic_marginLR"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="@dimen/basic_marginLR"
            android:background="@drawable/radius_bg_white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/basic_paddingLR"
            android:paddingRight="@dimen/basic_paddingLR">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/hardware_icon" />

            <TextView
                android:id="@+id/tv_hardware_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/textMajor"
                android:textSize="@dimen/textBig" />


            <RelativeLayout
                android:id="@+id/img_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_harware_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_harware_info"
            android:layout_marginLeft="@dimen/basic_marginLR"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/basic_marginLR"
            android:background="@drawable/radius_bg_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/basic_paddingLR"
            android:paddingRight="@dimen/basic_paddingLR">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <ImageView
                    android:id="@+id/img_icon_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/hardware_type" />

                <TextView
                    android:id="@+id/tv_chain_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_icon_1"
                    android:text="@string/hardware_type"
                    android:textColor="@color/textMajor"
                    android:textSize="@dimen/textNormal" />

                <TextView
                    android:id="@+id/tv_chain_type_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="W1"
                    android:textColor="@color/textMajor"
                    android:textSize="@dimen/textNormal" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#59a4a4e9" />
            <!--设备ID-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <ImageView
                    android:id="@+id/img_icon_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/hardware_id" />

                <TextView
                    android:id="@+id/tv_chain_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_icon_2"
                    android:text="@string/hardware_id"
                    android:textColor="@color/textMajor"
                    android:textSize="@dimen/textNormal" />

                <TextView
                    android:id="@+id/tv_chain_id_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textMajor"
                    android:textSize="@dimen/textNormal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#59a4a4e9" />

            <!--设备UUID-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <ImageView
                    android:id="@+id/img_icon_5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/hardware_id" />

                <TextView
                    android:id="@+id/tv_uuid_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_icon_5"
                    android:text="@string/uuid_title"
                    android:textColor="@color/textMajor"
                    android:textSize="@dimen/textNormal" />

                <TextView
                    android:id="@+id/tv_uuid_content"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/textMajor"
                    android:textSize="@dimen/textNormal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#59a4a4e9" />
            <!--设备创建时间-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">

                <ImageView
                    android:id="@+id/img_icon_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/init_time" />

                <TextView
                    android:id="@+id/tv_init_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_icon_4"
                    android:text="@string/usb_init_time"
                    android:textColor="@color/textMajor"
                    android:textSize="@dimen/textNormal" />

                <TextView
                    android:id="@+id/tv_init_time_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/textNormal" />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_harware_info3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_harware_info2"
            android:layout_marginLeft="@dimen/basic_marginLR"
            android:layout_marginTop="16dp"
            android:layout_marginRight="@dimen/basic_marginLR"
            android:background="@drawable/radius_bg_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/basic_paddingLR"
            android:paddingRight="@dimen/basic_paddingLR">


            <RelativeLayout
                android:id="@+id/rl_clear_hardware"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/img_icon_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/claer_hardware" />

                <TextView
                    android:id="@+id/tv_clear_hardware"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_icon_3"
                    android:text="@string/clear_hardware"
                    android:textColor="@color/textMajor"
                    android:textSize="@dimen/textNormal" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/enter" />
            </RelativeLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btn_delete_bind"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/basic_marginLR"
            android:layout_marginRight="@dimen/basic_marginLR"
            android:layout_marginBottom="20dp"
            android:background="@drawable/radius_btn_warning"
            android:text="@string/delete_hardware"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/textNormal" />

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
