<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:alpha="0.5"
            android:background="@color/tertiary"
            android:visibility="invisible"></View>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/shape_round_primary_light_background"></View>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:alpha="0.5"
            android:background="@color/tertiary"
            android:minHeight="200dp"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tertiary"
            android:textSize="@dimen/textSmall"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:textSize="@dimen/textBig"></TextView>

            <TextView
                android:id="@+id/tvItemSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/secondary"
                android:textSize="@dimen/textNormal"></TextView>

            <TextView
                android:id="@+id/tv_ipfs"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/radius_btn_minor"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/basic_paddingLR"
                android:paddingTop="8dp"
                android:paddingRight="@dimen/basic_paddingLR"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textColor="@color/secondary"
                android:textSize="@dimen/textSmall"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
