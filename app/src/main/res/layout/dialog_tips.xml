<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dialog_margin"
    android:layout_marginRight="@dimen/dialog_margin"
    android:background="@drawable/radius_bg_white"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textMajor"
        android:textSize="@dimen/dialog_text_title" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_margin"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/secondary"
        android:textSize="@dimen/textNormal" />


    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/understand_risk"
        android:textColor="@color/textMajor"
        android:textSize="@dimen/textSmall"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_collect_copy"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/textSmall" />

        <TextView
            android:id="@+id/tv_negative"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/btn_positive"
            android:gravity="center"
            android:textColor="@color/textMajor"
            android:textSize="@dimen/textSmall"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>