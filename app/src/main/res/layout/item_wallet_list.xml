<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/radius_bg_assets_card"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/ll_wallet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/basic_marginLR"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/textNormal" />

        <TextView
            android:id="@+id/tv_no_backup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/radius_btn_warning_small"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/no_backup1"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:visibility="gone" />

    </LinearLayout>


    <ImageView
        android:id="@+id/img_enter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:scaleType="center"
        android:src="@drawable/enter_1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_selected"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/selected"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_wallet_name"
        android:layout_marginLeft="@dimen/basic_marginLR"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/basic_marginLR">


        <LinearLayout
            android:id="@+id/ll_wallet_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="#80ffffff"
                android:textSize="@dimen/textSmall" />

            <ImageView
                android:id="@+id/img_copy"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/copy" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textSmall" />

    </RelativeLayout>


</RelativeLayout>