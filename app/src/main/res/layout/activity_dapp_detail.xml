<?xml version="1.0" encoding="utf-8"?><!-- author:jason -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/layoutNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:paddingStart="16dp"
        android:paddingTop="18dp"
        android:paddingEnd="16dp"
        android:paddingBottom="18dp">

        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/back_light"></ImageButton>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="24dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="16sp"></TextView>

        <LinearLayout
            android:id="@+id/layoutShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/transparent"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:src="@drawable/icon_share_light"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/share"
                android:textColor="#ffffff"
                android:textSize="@dimen/textNormal"></TextView>
        </LinearLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutNavigation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/vBannerBackground"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:background="@color/primary"></View>

            <com.tianji.tjwallet.component.RoundAngleLayout
                android:id="@+id/layoutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vBannerBackground"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-140dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_card_background"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/ivDappDetail"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_banner_default"></ImageView>

                <LinearLayout
                    android:id="@+id/layoutBasicInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivDappDetail"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.tianji.tjwallet.component.RoundImageView
                        android:id="@+id/ivIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/img_default"
                        app:border_radius="12"></com.tianji.tjwallet.component.RoundImageView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="10dp">

                        <TextView
                            android:id="@+id/tvDappName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/textBig"></TextView>

                        <TextView
                            android:id="@+id/tvSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/tertiary"
                            android:textSize="@dimen/textNormal"></TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvPlatform"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/textNormal"></TextView>

                            <TextView
                                android:id="@+id/tvType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:textColor="@color/secondary"
                                android:textSize="@dimen/textNormal"></TextView>

                            <ImageButton
                                android:id="@+id/ivFollow"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@color/transparent"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:scaleType="center"
                                android:src="@drawable/icon_follow_normal"></ImageButton>

                            <TextView
                                android:id="@+id/tvFollowCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="0"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/textNormal"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/count_zan"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/textNormal"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutBasicInfo"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textColor="@color/tertiary"
                        android:textSize="24sp"></TextView>

                    <RatingBar
                        android:id="@+id/rbScore"
                        style="@android:style/Widget.Material.Light.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:paddingTop="4dp"
                        android:progressDrawable="@drawable/layer_rating_bar"
                        android:rating="4"></RatingBar>

                    <TextView
                        android:id="@+id/tvRatingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="0"
                        android:textColor="@color/tertiary"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score"
                        android:textColor="@color/tertiary"
                        android:textSize="10dp"></TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ipfs_hash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_start"
                    android:layout_marginLeft="@dimen/basic_marginLR"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="@dimen/basic_marginLR"
                    android:background="@drawable/radius_btn_minor"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:paddingLeft="@dimen/basic_paddingLR"
                    android:paddingTop="8dp"
                    android:paddingRight="@dimen/basic_paddingLR"
                    android:paddingBottom="8dp"
                    android:singleLine="true"
                    android:textColor="@color/secondary"
                    android:textSize="@dimen/textSmall"
                    android:visibility="gone" />

            </com.tianji.tjwallet.component.RoundAngleLayout>

            <Button
                android:id="@+id/btnOpenWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutCard"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:layout_marginEnd="16dp"
                android:background="@drawable/radius_btn_normal"
                android:text="@string/open"
                android:textColor="#ffffff"></Button>

            <!-- 简介 -->
            <LinearLayout
                android:id="@+id/layoutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnOpenWebsite"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/primary"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/introduction"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/textBig"></TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:lineHeight="20sp"
                    android:minLines="3"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/textNormal"></TextView>
            </LinearLayout>

            <!-- 社交 -->
            <LinearLayout
                android:id="@+id/layoutSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutDescription"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/primary"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/social"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/textBig"></TextView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <!-- 资产信息 -->
            <LinearLayout
                android:id="@+id/layoutAssets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutSocial"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/primary"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/assets_info"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/textBig"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <!-- 24H 用户 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="60dp"
                            android:text="@string/user_24h"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/textSmall"></TextView>

                        <TextView
                            android:id="@+id/tvUser24H"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/textBig"></TextView>

                        <TextView
                            android:id="@+id/tvUser24HPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/tertiary"
                            android:textSize="@dimen/textNormal"></TextView>

                        <ImageView
                            android:id="@+id/ivUser24HUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/icon_up"></ImageView>

                        <ImageView
                            android:id="@+id/ivUser24HDown"
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/icon_down"></ImageView>
                    </LinearLayout>

                    <!-- 24H 成交额 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="60dp"
                            android:text="@string/turnover_24h"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/textSmall"></TextView>

                        <TextView
                            android:id="@+id/tvVolume24H"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/textBig"></TextView>

                        <TextView
                            android:id="@+id/tvVolume24HPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/tertiary"
                            android:textSize="@dimen/textNormal"></TextView>

                        <ImageView
                            android:id="@+id/ivVolume24HUp"
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/icon_up"></ImageView>

                        <ImageView
                            android:id="@+id/ivVolume24HDown"
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/icon_down"></ImageView>
                    </LinearLayout>

                    <!-- 24H 成交量 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="60dp"
                            android:text="@string/volume_24h"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/textSmall"></TextView>

                        <TextView
                            android:id="@+id/tvTx24H"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/textBig"></TextView>

                        <TextView
                            android:id="@+id/tvTx24HPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/tertiary"
                            android:textSize="@dimen/textNormal"></TextView>

                        <ImageView
                            android:id="@+id/ivTx24HUp"
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/icon_up"></ImageView>

                        <ImageView
                            android:id="@+id/ivTx24HDown"
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/icon_down"></ImageView>
                    </LinearLayout>

                    <!-- 7D 成交额 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="60dp"
                            android:text="@string/turnover_7d"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/textSmall"></TextView>

                        <TextView
                            android:id="@+id/tvVolume7D"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/textBig"></TextView>

                        <TextView
                            android:id="@+id/tvVolume7DPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/tertiary"
                            android:textSize="@dimen/textNormal"></TextView>

                        <ImageView
                            android:id="@+id/ivVolume7DUp"
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/icon_up"></ImageView>

                        <ImageView
                            android:id="@+id/ivVolume7DDown"
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/icon_down"></ImageView>
                    </LinearLayout>

                    <!-- 7D 成交量 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="60dp"
                            android:text="@string/volume_7d"
                            android:textColor="@color/secondary"
                            android:textSize="@dimen/textSmall"></TextView>

                        <TextView
                            android:id="@+id/tvTx7D"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="0"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/textBig"></TextView>

                        <TextView
                            android:id="@+id/tvTx7DPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/tertiary"
                            android:textSize="@dimen/textNormal"></TextView>

                        <ImageView
                            android:id="@+id/ivTx7DUp"
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/icon_up"></ImageView>

                        <ImageView
                            android:id="@+id/ivTx7DDown"
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:src="@drawable/icon_down"></ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 数据统计 -->
            <LinearLayout
                android:id="@+id/layoutStatistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutAssets"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/primary"></View>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/statistics"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/textBig"></TextView>

                    <Button
                        android:id="@+id/btnToggle24H"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="@string/hour_24"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/textBig"></Button>

                    <Button
                        android:id="@+id/btnToggle7D"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/transparent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="@string/day_7"
                        android:textColor="@color/tertiary"
                        android:textSize="@dimen/textBig"></Button>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- TODO 填充统计数据 -->
                </FrameLayout>
            </LinearLayout>

            <!-- 网页快照 -->
            <LinearLayout
                android:id="@+id/layoutScreenshot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutStatistics"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/primary"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/web_snapshot"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/textBig"></TextView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvScreenshot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <!-- 合约地址 -->
            <LinearLayout
                android:id="@+id/layoutSmartContract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutScreenshot"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/primary"></View>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/contract_address"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/textBig"></TextView>

                    <LinearLayout
                        android:id="@+id/layoutMoreSmartContract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnMoreSmartContract"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:text="@string/more"
                            android:textColor="@color/tertiary"
                            android:textSize="@dimen/textNormal"></Button>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/icon_into"></ImageView>
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSmartContract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <!-- 相关动态 -->
            <LinearLayout
                android:id="@+id/layoutRelevantArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutSmartContract"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/primary"></View>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/related_news"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/textBig"></TextView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRelevantArticle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <!-- 推荐DApp -->
            <LinearLayout
                android:id="@+id/layoutRecommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutRelevantArticle"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/primary"></View>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/recommend_dapp"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/textBig"></TextView>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutRecommend"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Powered by "
                    android:textColor="@color/tertiary"
                    android:textSize="@dimen/textNormal"></TextView>

                <TextView
                    android:id="@+id/tvWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dapponline.io"
                    android:textColor="@color/tertiary"
                    android:textSize="@dimen/textNormal"></TextView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>